@model rolesDemoSSD.ViewModels.ReviewVM

@{
    ViewData["Title"] = "Movie Library - Rewind";
}

<h2>Review this movie</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateReview">
            <div class="form-group">
                <input asp-for="Rating" type="radio" name="rating" value="1"  />
                <input asp-for="Rating" type="radio" name="rating" value="2" />
                <input asp-for="Rating" type="radio" name="rating" value="3" />
                <input asp-for="Rating" type="radio" name="rating" value="4" />
                <input asp-for="Rating" type="radio" name="rating" value="5" checked="checked"/>
            </div>
            <input asp-for="MovieID" type="text" hidden/>
            <input asp-for="Email" type="text" hidden/>
            <div class="form-group">
                <input asp-for="ReviewTitle" type="text" />
            </div>
            <div class="form-group">
                <textarea asp-for="ReviewContent"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
